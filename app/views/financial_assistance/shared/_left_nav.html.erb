              <span class="fa fa-check"></span>
            <% end %>
            Tax Info
          <% end %>
        </li>

      <li class="list-box step-tabs <%= activer_for("income") %>">
          <%= link_to @applicant.incomes.present? ? financial_assistance_application_applicant_incomes_path(@application, @applicant) : "#", class: "#{left_nav_css(@applicant.incomes.present?)}" do %>
