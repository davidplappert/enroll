            <% if @applicant.benefits_complete? %>
              <span class="fa fa-check"></span>
            <% end %>
            Health Coverage
          <% end %>
        </li>

        <li class="list-box step-tabs <%= activer_for("other_questions") %>">
          <%= link_to other_questions_financial_assistance_application_applicant_path(@application, @applicant) do %>
            <% if @applicant.other_questions_complete? %>
